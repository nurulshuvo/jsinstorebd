
<div data-role="header">
  <h1>eStore</h1>
  <% if user_signed_in? %>
                 <a href="#" class="navbar-link"><strong><%= current_user.email %></strong></a>
                 <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: {transition: 'slide'} %>
            <% else %>
                <%= link_to 'Sign up', new_user_registration_path, data: {transition: 'slide'} %>
                <%= link_to 'Sign in', new_user_session_path, data: {transition: 'slide'} %>
            <% end %>


</div> <!--/header-->
<div data-role="content">

    <ul data-role="listview" data-inset="true" data-theme="a">
  <% @products.each do |product| %>
    <li>
      <%= image_tag product.image_url.to_s %>
      <%= product.title %>
      <p><%= product.address %></p>
      <!-- <p><%#= sanitize product.description %> </p> -->
      <span class="price" >Price: <%= number_to_currency(product.price) %></span>
      <%= button_to 'Add to Cart', line_items_path(product_id: product.id) %>
    </li>
  <% end %>
</ul>

</div> <!--/content-->

