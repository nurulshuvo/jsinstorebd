<div class="container-fluid">
<div >

<div class="span9" id="product">

<%#= gmaps4rails(@json) %>

<hr>

<% if current_user %>
  <% @location = Product.new(address: "#{current_user.address}", latitude: "#{current_user.latitude}", longitude: "#{current_user.longitude}") %>



    <% if params[:category] || params[:search] || params[:cat_search] %>
      

        <div>
          
          <% @products.each do |product| %>
            <div class="span4 box">
              <h4><%= link_to product.title.titleize, product_path(product) %></h4>
              <p><%= product.address %></p>
              <%= image_tag product.image_url.to_s %>
              
              <span class="price" >Price: <%= number_to_currency(product.price) %></span>
              <%#= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn" %>
              <%= link_to "Send a message to the owner", new_email_message_path(product.user.email) %>
            </div><!--/span-->
          <% end %>
          

    <% end %>

  <div>
      <h4 style="margin-left: 28px;">Electronics</h4>
    <% @electronic_products.each do |product| %>
      <div class="span4 box">
        <h4><%= link_to product.title.titleize, product_path(product) %></h4>
        <p><%= product.address %></p>
        <%= image_tag product.image_url.to_s %>
        
        <span class="price" >Price: <%= number_to_currency(product.price) %></span>
        <%#= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn pull-right" %>
      </div><!--/span-->
    <% end %>
    
  </div><!--/row-->
  </div><!--/span-->
  </div><!--/row-->



<% else %>

  <p class='alert'>Please Sign in for a better experience</p>
  <div>
    <h4 style="margin-left: 28px;">Electronics</h4>
    <% @electronic_products.each do |product| %>
      <div class="span4 box">
        <h4><%= link_to product.title.titleize, product_path(product) %></h4>
        <p><%= product.address %></p>
        <%= image_tag product.image_url.to_s %>
        
        <span class="price" >Price: <%= number_to_currency(product.price) %></span>
        <%#= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn pull-right" %>
      </div><!--/span-->
    <% end %>
    
  </div><!--/row-->
  </div><!--/span-->
  </div><!--/row-->


<% end %>
