  $("#nav-search-in-content").text(Search_Str);
5
});

      $('#side-nav').accordion();
  </script>



<%= yield :scripts %>

</div>

<%= debug(params) if Rails.env.development? %>


<a href="#" 
  onclick="
    window.open(
      'https://www.facebook.com/sharer/sharer.php?u='+encodeURIComponent(location.href), 
      'facebook-share-dialog', 
      'width=626,height=436'); 
    return false;">
  Share on Facebook
</a>
</body>
</html>
