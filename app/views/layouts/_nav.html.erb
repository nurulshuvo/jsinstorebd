<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="<%= store_path %>">eStore</a>
          
          <div class="nav-collapse collapse">
            <% if user_signed_in? %>
              <p class="navbar-text pull-right">
                 Signed in as: <a href="#" class="navbar-link"><strong><%= current_user.email %></strong></a> |
                 <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'navbar-link' %>
              </p>
            <% else %>
              <p class="navbar-text pull-right">
                <%= link_to 'Sign up', new_user_registration_path, class: 'navbar-link' %> |
                <%= link_to 'Sign in', new_user_session_path, class: 'navbar-link' %>
              </p>
            <% end %>


            <%= form_tag store_path, method: :get, class: "navbar-text pull-left" do %>
              Search by: <%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Name" %>
               <%#= text_field_tag :cat_search, params[:cat_search], class: "search-query", placeholder: "Category" %>
               <%#= select_tag :cat_search, @categories_for_list, name, prompt: "Select a category" %>

               <%= select_tag :cat_search, options_for_select(Category.all.map {|obj, id| [obj, obj]}), prompt: "Select a category", class: "selectpicker search-select" %>
               <%#= select_tag :cat_search, options_for_select(@categories_for_list.map { |obj, id | [obj, obj] }), prompt: "Select a category", class: "selectpicker" %>
               <%= submit_tag "search", class: "btn btn-small search-btn" %>
            <% end %>

            <%= link_to "Advanced", new_search_path, class: "navbar-text pull-left" %>


            <ul class="nav">
              
              <li><a href="<%= products_path %>">Add/Remove Product</a></li>
              <li><a href="<%= store_path %>">Home</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
</div>