<!DOCTYPE html>
<html>
<head>
  <title>Jsinstorebd</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= yield %>


<div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="<%= store_path %>">jsinStoreBD</a>
          <div class="nav-collapse collapse">
            <% if user_signed_in? %>
              <p class="navbar-text pull-right">
                 Signed in as: <a href="#" class="navbar-link"><strong><%= current_user.email %></strong></a> |
                 <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'navbar-link' %>
              </p>
            <% else %>
              <p class="navbar-text pull-right">
                <%= link_to 'Sign up', new_user_registration_path, class: 'navbar-link' %> |
                <%= link_to 'Sign in', new_user_session_path, class: 'navbar-link' %>
              </p>
            <% end %>
            <ul class="nav">
              <li><a href="<%= store_path %>">Catalog</a></li>
              <li><a href="<%= products_path %>">Admin</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
</div>
<% if notice %>
  <p id="notice" ><%= notice %></p>
<% end %>


      <hr>

      <footer>
        <p>&copy; jsinstorebd 2013</p>
      </footer>

    </div><!--/.fluid-container-->


</body>
</html>
