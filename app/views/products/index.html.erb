<div id="profile-page">
<%= link_to 'New Product', new_product_path, class: "new-product" %>

<table id="product-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<% @products.each do |product| %>
<tr>
<td><%= product.title %></td>
<td><%= product.description %></td>
<td><%= product.price %></td>
<td><%= link_to 'Show', product %></td>
<td><%= link_to('Edit', edit_product_path(product)) if current_user.id == product.user.id %></td>
<td><%= link_to('Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.id == product.user.id %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>