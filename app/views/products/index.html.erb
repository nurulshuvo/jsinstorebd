<%= link_to 'New Product', new_product_path, class: "new-product" %>
<h1 style="margin-left: 20px">products</h1>


<% @products.each do |product| %>
<div class="product-list">
    Title:<%= product.title %>
    <p>Description:<%= product.description %></p>
    Price:<%= product.price %>
    <div><%= link_to 'Show', product %>
    <%= link_to('Edit', edit_product_path(product)) if current_user.id == product.user.id %></td>
    <%= link_to('Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.id == product.user.id %></div>
</div>
<% end %>
